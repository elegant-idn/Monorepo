      "outDir": "./dist",
      "module": "ESNext",
      "target": "es5",
      "lib": ["esnext", "dom"],
      "declaration": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "jsx": "preserve",
      "allowSyntheticDefaultImports": true
